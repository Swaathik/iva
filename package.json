{
  "name": "iva",
  "version": "0.9.0",
  "description": "IVA description",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencb/iva.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "ln -s lib/jsorolla/.eslintrc.json",
    "clean": "rm -r build",
    "init": "npm run clean && mkdir -p build/vendors build/jsorolla build/css build/fonts build/img build/conf",
    "build-jsorolla": "cp -r lib/jsorolla/dist build/jsorolla/",
    "build-js-css-vendors": "./build-vendors.sh",
    "build-css": "npm run build-css-jsorolla && npm run build-fonts && npm run build-img",
    "build-css-jsorolla": "cp -r build/jsorolla/dist/css node_modules/font-awesome/fonts build",
    "build-fonts": "cp -r build/jsorolla/dist/fonts/* build/fonts",
    "build-img": "cp -r build/jsorolla/dist/img/* src/img/* build/img",
    "build-config": "cp -r src/conf/config.js src/conf/tools.js src/conf/panels.js src/conf/icd10.js LICENSE build/conf",
    "build-root": "mkdir -p build/components && cp src/components/iva-settings.html build/components && cp -r src/welcome.html src/jso-styles.html build && cp -r src/iva-app.html build/iva-app-src.html && cp -r src/index.html build && cd build && sed -i '' 's#../node_modules#vendor#g' index.html iva-app-src.html && sed -i '' 's#../lib/jsorolla/src#jsorolla/dist/js#g' iva-app-src.html && npm run vulcanize",
    "vulcanize": "node_modules/vulcanize/bin/vulcanize build/iva-app-src.html > build/iva-app.html",
    "build-iva-app": "sed -i '' 's#\\[importPath\\]#img#g' build/iva-app.html",
    "build": "npm run init && npm run build-jsorolla && npm run build-js-css-vendors && npm run build-css && npm run build-config && npm run build-root && npm run build-iva-app"
  },
  "dependencies": {
    "@polymer/polymer": "~2.0.2",
    "@webcomponents/shadycss": "~1.0.1",
    "@webcomponents/webcomponentsjs": "~1.0.2",
    "backbone": "~1.3.3",
    "bootstrap": "3.3.6",
    "bootstrap-colorpicker": "2.3.6",
    "bootstrap-table": "1.11.1",
    "bootstrap-treeview": "1.2.0",
    "bootstrap-validator": "~0.11.9",
    "cookies-js": "~1.2.2",
    "crypto-js": "~3.1.8",
    "eonasdan-bootstrap-datetimepicker": "~4.17.43",
    "file-saver": "~1.3.2",
    "font-awesome": "*",
    "highcharts": "~4.2.7",
    "jquery": "~2.2.4",
    "jspdf": "https://github.com/MrRio/jsPDF.git#1.3.4",
    "moment": "^2.15.1",
    "qtip2": "~3.0.3",
    "underscore": "~1.8.3",
    "urijs": "~1.18.10",
    "vulcanize": "^1.14.12"
  },
  "devDependencies": {
    "eslint": "~4.3.0",
    "eslint-config-airbnb": "~15.1.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.1.0",
    "crisper": "~2.0.2",
    "grunt": "~0.4.5",
    "grunt-contrib-clean": "~1.0.0",
    "grunt-contrib-concat": "~1.0.1",
    "grunt-contrib-copy": "~1.0.0",
    "grunt-contrib-qunit": "~1.2.0",
    "grunt-contrib-rename": "0.0.3",
    "grunt-contrib-uglify": "~2.0.0",
    "grunt-curl": "~2.2.0",
    "grunt-html-build": "~0.6.1",
    "grunt-hub": "~0.7.0",
    "grunt-processhtml": "~0.4.1",
    "grunt-replace": "~1.0.1",
    "grunt-vulcanize": "~1.0.0",
    "js-beautify": "~1.6.4",
    "uglify-js": "^2.7.3",
    "vulcanize": "~1.14.8"
  }
}
